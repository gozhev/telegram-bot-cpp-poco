[Unit]
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%h
StartLimitIntervalSec=0

[Service]
Environment=
Restart=always
RestartSec=60
TimeoutStopSec=10
WorkingDirectory=/etc/telegram-bot
ExecStart=/usr/bin/telegram-bot
Type=simple

[Install]
WantedBy=multi-user.target default.target
